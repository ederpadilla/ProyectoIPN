<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="6dp"
        android:layout_gravity="top"
        android:id="@+id/cardview_profile"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_alignParentTop="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:id="@+id/fragment_alguien_mas_recogera_a_nombre"
                android:text="@string/alguien_mas_recogera"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Joan Jose Franciso"
                android:id="@+id/fragment_alguien_mas_recogera_recogido_por"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:id="@+id/fragment_alguien_mas_recogera_fecha"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="15/02/2016"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textStyle="bold"
                android:id="@+id/fragment_alguien_mas_recogera_hora"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="13:10"/>
           <ImageView
               android:layout_width="@dimen/dimen_40dp"
               android:layout_height="@dimen/dimen_40dp"
               android:src="@mipmap/ic_camera_front"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>